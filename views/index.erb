<% if session[:error] %>
  <p><%= session.delete :error %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Filename</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td>
          <a href="/<%= file %>"><%= file %></a>
        </td>
        <td>
          <a href="/<%= file %>/edit">Edit</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>